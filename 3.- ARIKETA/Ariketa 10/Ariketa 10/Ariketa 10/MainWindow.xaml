<Window x:Class="Ariketa_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa_10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Mis Imagenes" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top" Height="51" Width="160" HorizontalContentAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <Label Content="1. Fila" HorizontalAlignment="Left" Margin="94,133,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="94,159,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBoxSelect">
            <ComboBoxItem Content="imagen 1" />
            <ComboBoxItem Content="imagen 2" />
            <ComboBoxItem Content="imagen 3" />
        </ComboBox>
        <Label Content="2. Fila" HorizontalAlignment="Left" Margin="96,217,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="Check4" Content="Imagen 4" HorizontalAlignment="Left" Margin="94,243,0,0" VerticalAlignment="Top" Checked="checkBox_erakutsi" Unchecked="checkBox_izkutatu"/>
        <CheckBox x:Name="Check5" Content="Imagen 5" HorizontalAlignment="Left" Margin="94,263,0,0" VerticalAlignment="Top" Checked="checkBox_erakutsi" Unchecked="checkBox_izkutatu"/>
        <CheckBox x:Name="Check6" Content="Imagen 6" HorizontalAlignment="Left" Margin="94,283,0,0" VerticalAlignment="Top" Checked="checkBox_erakutsi" Unchecked="checkBox_izkutatu"/>
        <Image x:Name="img1" Visibility="Collapsed" HorizontalAlignment="Left" Height="100" Margin="272,116,0,0" VerticalAlignment="Top" Width="100" Source="/pintura1.jpeg"/>
        <Image x:Name="img2" Visibility="Collapsed" HorizontalAlignment="Left" Height="100" Margin="427,116,0,0" VerticalAlignment="Top" Width="100" Source="/img2.jpeg"/>
        <Image x:Name="img3" Visibility="Collapsed" HorizontalAlignment="Left" Height="100" Margin="607,116,0,0" VerticalAlignment="Top" Width="100" Source="/pintura3.jpeg"/>
        <Image x:Name="img4" Visibility="Collapsed" HorizontalAlignment="Left" Height="100" Margin="272,230,0,0" VerticalAlignment="Top" Width="100" Source="/pintura4.jpeg"/>
        <Image x:Name="img5" Visibility="Collapsed" HorizontalAlignment="Left" Height="100" Margin="427,230,0,0" VerticalAlignment="Top" Width="100" Source="/pintura5.jpeg"/>
        <Image x:Name="img6" Visibility="Collapsed" HorizontalAlignment="Left" Height="100" Margin="607,230,0,0" VerticalAlignment="Top" Width="100" Source="/pintura6.jpeg"/>

    </Grid>
</Window>
