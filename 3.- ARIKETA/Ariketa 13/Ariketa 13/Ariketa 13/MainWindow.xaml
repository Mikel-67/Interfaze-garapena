<Window x:Class="Ariketa_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Artxibatzea">
                <MenuItem Header="Atera" Click="Atera_Click"/>
            </MenuItem>
            <MenuItem Header="Editatzea">
                <MenuItem Header="Moztu" InputGestureText="Ctrl+X" Click="Moztu_Click"/>
                <MenuItem Header="Kopiatu" InputGestureText="Ctrl+C" Click="Kopiatu_Click"/>
                <MenuItem Header="Itsasi" InputGestureText="Ctrl+V" Click="Itsasi_Click"/>
                <MenuItem Header="Ezabatu" InputGestureText="Supr" Click="Ezabatu_Click"/>
            </MenuItem>
            <MenuItem Header="Iturria">
                <MenuItem Header="Arial" Click="Arial_Click"/>
                <MenuItem Header="Courier" Click="Courier_Click"/>
                <MenuItem Header="Impact" Click="Impact_Click"/>
                <MenuItem Header="Symbol" Click="Symbol_Click"/>
            </MenuItem>
        </Menu>
        <TextBox Name="txtEditor" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontSize="16" />
    </DockPanel>
</Window>
