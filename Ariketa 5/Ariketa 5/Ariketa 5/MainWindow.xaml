        <Button Content="Salir" HorizontalAlignment="Left" Margin="401,336,0,0" VerticalAlignment="Top" Width="63" Click="exitApp"/>
        <Label x:Name="Info" Content="" HorizontalAlignment="Left" Margin="390,373,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="hitza" HorizontalAlignment="Center" Margin="0,66,0,0" TextWrapping="Wrap" Text="Texto de prueba" VerticalAlignment="Top" Height="41" Width="234" TextAlignment="Center" FontSize="20"/>

    </Grid>
</Window>
