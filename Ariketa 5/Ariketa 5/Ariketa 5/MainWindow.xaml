        <Button Content="Subrayado" HorizontalAlignment="Left" Margin="442,0,0,0" VerticalAlignment="Center" Click="subrayado"/>
        <Button Content="-Tamano" HorizontalAlignment="Left" Margin="556,0,0,0" VerticalAlignment="Center" Click="tamainaTxikitu"/>
