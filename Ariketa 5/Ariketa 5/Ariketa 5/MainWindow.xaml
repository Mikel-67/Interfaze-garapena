        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Comic sans" HorizontalAlignment="Left" Margin="203,146,0,0" VerticalAlignment="Top" Click="comicSans"/>
        <Button Content="Negrita" HorizontalAlignment="Left" Margin="307,146,0,0" VerticalAlignment="Top" Click="negrita"/>
        <Button Content="Tachado" HorizontalAlignment="Left" Margin="442,146,0,0" VerticalAlignment="Top" Click="tachado"/>
        <Button Content="+Tamano" HorizontalAlignment="Left" Margin="556,146,0,0" VerticalAlignment="Top" Click="tamainaHanditu"/>
