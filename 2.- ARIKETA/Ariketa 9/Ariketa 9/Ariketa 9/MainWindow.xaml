<Window x:Class="Ariketa_9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa_9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lista" HorizontalAlignment="Left" Height="298" Margin="42,45,0,0" VerticalAlignment="Top" Width="267" SelectionChanged="lagunaAukeratu"/>
        <Button x:Name="gehitu" Content="Gehitu" HorizontalAlignment="Left" Margin="645,45,0,0" VerticalAlignment="Top" Click="lagunaGehitu"/>
        <Button x:Name="ezabatu" Content="Ezabatu" HorizontalAlignment="Left" Margin="645,88,0,0" VerticalAlignment="Top" Click="lagunaEzabatu"/>
        <Button x:Name="listaEzabatu" Content="Lista Ezabatu" HorizontalAlignment="Left" Margin="645,133,0,0" VerticalAlignment="Top" Click="lagunZerrendaGarbitu"/>
        <Button x:Name="atera" Content="Atera" HorizontalAlignment="Left" Margin="645,323,0,0" VerticalAlignment="Top" Click="itxi"/>
        <Label Content="Autatutako Laguna" HorizontalAlignment="Left" Margin="381,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="autatuta" HorizontalAlignment="Left" Margin="381,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Label Content="Lagun Berria" HorizontalAlignment="Left" Margin="381,145,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="berria" HorizontalAlignment="Left" Margin="381,176,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nire lagunak" HorizontalAlignment="Left" Margin="42,19,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
