<Window x:Class="WPFAriketak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAriketak"
        mc:Ignorable="d"
        Title="Cálculo de fórmula matemática" Height="450" Width="300">
    <Grid>
        <Label Content="Primer Número" HorizontalAlignment="Left" Margin="28,52,0,0" VerticalAlignment="Top" Width="102" Background="DarkRed" FontStyle="Italic" Foreground="White" HorizontalContentAlignment="Center"/>
        <TextBox Name="txtPrimerNumero" HorizontalAlignment="Left" Margin="150,52,0,0" VerticalAlignment="Top" Width="100"/>

        <Label Content="Segundo Número" HorizontalAlignment="Left" Margin="28,97,0,0" VerticalAlignment="Top" Width="102" Background="DarkRed" FontStyle="Italic" Foreground="White" HorizontalContentAlignment="Center"/>
        <TextBox Name="txtSegundoNumero" HorizontalAlignment="Left" Margin="150,97,0,0" VerticalAlignment="Top" Width="100"/>

        <Label Content="Tercer Número" HorizontalAlignment="Left" Margin="28,142,0,0" VerticalAlignment="Top" Width="102" Background="DarkRed" FontStyle="Italic" Foreground="White" HorizontalContentAlignment="Center"/>
        <TextBox Name="txtTercerNumero" HorizontalAlignment="Left" Margin="150,142,0,0" VerticalAlignment="Top" Width="100"/>

        <Label Content="Cuarto Número" HorizontalAlignment="Left" Margin="28,191,0,0" VerticalAlignment="Top" Width="102" Background="DarkRed" FontStyle="Italic" Foreground="White" HorizontalContentAlignment="Center"/>
        <TextBox Name="txtCuartoNumero" HorizontalAlignment="Left" Margin="150,191,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Resultado" HorizontalAlignment="Left" Margin="28,250,0,0" VerticalAlignment="Top" Width="102" Background="DarkBlue" FontStyle="Italic" Foreground="White" HorizontalContentAlignment="Center"/>
        <TextBox Name="txtResultado" HorizontalAlignment="Left" Margin="150,255,0,0" VerticalAlignment="Top" Width="130" Background="White"/>
        <Button Content="Operar" HorizontalAlignment="Left" Margin="39,335,0,0" VerticalAlignment="Top" Width="65" Click="Operar"/>
        <Button Content="Limpiar" HorizontalAlignment="Left" Margin="125,335,0,0" VerticalAlignment="Top" Width="65" Click="Limpiar"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="215,335,0,0" VerticalAlignment="Top" Width="65" Click="Salir"/>
    </Grid>
</Window>
